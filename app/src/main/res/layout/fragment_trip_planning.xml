<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.iteneraryapplication.dashboard.pages.tripplanning.presentation.TripPlanningViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/atomic_steel_light_blue"
        tools:context=".dashboard.pages.tripplanning.presentation.TripPlanningFragment">

        <TextView
            android:id="@+id/planning_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Trip Planning"
            android:textColor="@color/white"
            android:textSize="28dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.example.iteneraryapplication.app.widget.CustomRecyclerView
            android:id="@+id/list_planning"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:nestedScrollingEnabled="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/planning_title"
            tools:listitem="@layout/shared_list_note_item" />

        <include
            android:id="@+id/loading_widget"
            layout="@layout/shared_loading_widget"
            tools:visibility="gone"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_trip_planning_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            app:maxImageSize="30dp"
            app:fabCustomSize="60dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="120dp"
            android:backgroundTint="@color/seagull_blue"
            app:borderWidth="0dp"
            android:tint="@color/white"
            android:scaleType="fitXY"
            android:clickable="true"
            app:rippleColor="@color/opacity_gray"
            android:src="@drawable/icon_add_24px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

