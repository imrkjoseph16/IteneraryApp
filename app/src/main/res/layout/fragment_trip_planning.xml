<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".dashboard.pages.tripplanning.TripPlanningFragment">

    <data>
        <variable
            name="dto"
            type="com.example.iteneraryapplication.app.shared.dto.layout.NoteItemViewDto" />

        <variable
            name="viewModel"
            type="com.example.iteneraryapplication.dashboard.pages.tripplanning.TripPlanningViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rotation="120"
            android:background="@drawable/background_wave"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/search_view"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="14dp"
            android:background="@drawable/background_search_view"
            android:drawableStart="@drawable/icon_search_24px"
            android:drawablePadding="6dp"
            android:drawableTint="@color/colorLightBrown"
            android:hint="@string/find_your_notes"
            android:iconifiedByDefault="false"
            android:paddingStart="16dp"
            android:theme="@style/ThemeOverlay.search"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_change_layout"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_change_layout"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/background_circular"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:src="@drawable/icon_change_layout_24px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/colorLightBrown" />

        <com.example.iteneraryapplication.app.shared.component.CustomRecyclerView
            android:id="@+id/list_planning"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="12dp"
            android:paddingVertical="8dp"
            android:requiresFadingEdge="vertical"
            android:fadingEdgeLength="6dp"
            android:nestedScrollingEnabled="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_view"
            tools:listitem="@layout/shared_list_note_item" />

        <include
            android:id="@+id/loading_widget"
            layout="@layout/shared_loading_widget"
            android:visibility="gone"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_trip_planning_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            app:maxImageSize="30dp"
            app:fabCustomSize="60dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/ColorYellowNote"
            app:borderWidth="0dp"
            android:tint="@color/white"
            android:scaleType="fitXY"
            android:clickable="true"
            app:rippleColor="@color/opacity_gray"
            android:src="@drawable/icon_add_24px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <include
            android:id="@+id/widget_empty_screen"
            layout="@layout/shared_empty_list_item"
            android:visibility="gone"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

