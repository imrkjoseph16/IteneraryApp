<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.IteneraryApplication" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
    </style>
    <style name="Theme.IteneraryApplicationWithAppbar" parent="Theme.AppCompat.Light.DarkActionBar" />

    <style name="MatchWrapParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ConstraintParent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Style.App.circleImageView" parent="">
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.App.circleImageView</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">20dp</item>
        <item name="cornerSize">20dp</item>
        <item name="cornerSizeTopRight">8dp</item>
    </style>
</resources>